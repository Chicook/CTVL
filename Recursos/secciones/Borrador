body {
  font-family: sans-serif;
  background-color: #f2f2f2;
  margin: 0;
  padding: 0;
}

#chat-container {
  width: 600px;
  margin: 50px auto;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#chat-header {
  background-color: #4CAF50;
  color: #fff;
  padding: 10px;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

#chat-body {
  padding: 10px;
  max-height: 400px;
  overflow-y: scroll;
}

.message {
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 5px;
  background-color: #f2f2f2;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
}

.message .content {
  margin-bottom: 5px;
}

.message .actions {
  display: flex;
  justify-content: space-between;
}

.message .actions button {
  padding: 5px 10px;
  border-radius: 5px;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  cursor: pointer;
}

.message .actions button:hover {
  background-color: #3e8e41;
}

.message .actions .votes {
  font-weight: bold;
}
// DOM Elements
const chatBody = document.querySelector('#chat-body');
const form = document.querySelector('#chat-form');
const messageInput = document.querySelector('#message-input');

// Create a new message element
function createMessageElement(messageText) {
  const messageElement = document.createElement('div');
  messageElement.classList.add('message');
  messageElement.innerHTML = `
    <div class="content">${messageText}</div>
    <div class="actions">
      <button class="upvote">+1</button>
      <button class="downvote">-1</button>
      <span class="votes">0</span>
    </div>
  `;
  const upvoteButton = messageElement.querySelector('.upvote');
  const downvoteButton = messageElement.querySelector('.downvote');
  const votesElement = messageElement.querySelector('.votes');
  let votes = 0;
  upvoteButton.addEventListener('click', () => {
    votes++;
    votesElement.textContent = votes;
  });
  downvoteButton.addEventListener('click', () => {
    votes--;
    votesElement.textContent = votes;
  });
  return messageElement;
}

// Add a new message to the chat
function addMessage(messageText) {
  const messageElement = createMessageElement(messageText);
  chatBody.appendChild(messageElement);
  chatBody.scrollTop = chatBody.scrollHeight;
}

// Handle form submit
form.addEventListener('submit', (event) => {
  event.preventDefault();
  const messageText = messageInput.value.trim();
  if (messageText !== '') {
    addMessage(messageText);
    messageInput.value = '';
  }
});

// Add some initial messages to the chat
addMessage('Hola, ¿cómo están?');
addMessage('¿Qué opinan del tema que estamos discutiendo?');
addMessage('Me parece que deberíamos explorar otras opciones...');

